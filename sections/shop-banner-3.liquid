<section
  id="{{ section.settings.section_id }}"
  class="section-bg section-{{ section.id }} {% if section.settings.section_show == false %} d-none{% endif %} {{ section.settings.section_class_name }} {{ section.settings.padding_top }} {{ section.settings.padding_bottom }} d-md-block shop-banner-style-3"
  style="--section_bg: {% if section.settings.section_gradient != blank %}{{ section.settings.section_gradient }}{% else %}{{ section.settings.section_bg_color }}{% endif %}"
>
  <div class="{{ section.settings.container_type }}">
    <div class="row {% if section.settings.show_gutter == false %} g-0{% endif %} justify-content-center {% if section.settings.show_image_right == true %}flex-row-reverse {% endif %}">
      <div class="col-md-6 col-lg-{{ section.settings.block_column_width_1 }}">
        <div
          class="banner-image h-100 cover-background"
          style="{% if section.settings.banner_image != blank %}background-image: url({{ section.settings.banner_image | image_url }});{% else %}background-color: #4e76a8;{% endif %}"
        >        
      </div>
      </div>
      <div class="col-md-6 col-lg-{{ section.settings.block_column_width_2 }} text-center position-relative">
        <div
          class="cover-background content-text"
          style="{% if section.settings.background_image != blank %}background-image: url({{ section.settings.background_image | image_url }});{% endif %}{% if section.settings.content_bg_color != blank %} background-color: {{ section.settings.content_bg_color }};{% endif %}"
        >
          {%- if section.settings.sub_heading != blank -%}
            <span class="section-sub-heading">{{ section.settings.sub_heading }}</span>
          {%- endif -%}
          {%- if section.settings.heading != blank -%}
            <div class="alt-font section-heading">{{ section.settings.heading }}</div>
          {%- endif -%}
          {%- if section.settings.content != blank -%}
            <div class="section-description">{{ section.settings.content }}</div>
          {%- endif -%}
          {%- render 'button-settings',
            btn_style: section.settings.button_style,
            btn_size: section.settings.button_size,
            btn_text: section.settings.btn_text,
            btn_link: section.settings.btn_link,
            btn_radius: section.settings.btn_radius,
            btn_border_width: section.settings.btn_border_width,
            btn_icon_class: section.settings.btn_icon_class,
            icon_position: section.settings.icon_position
          -%}
          {%- if section.settings.border_text != blank -%}
            <div class="strok-text alt-font">{{ section.settings.border_text }}</div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  {%- unless section.settings.use_default_section_typography == true -%}
    .section-{{ section.id }} .section-heading {
      font-size: {{ section.settings.section_heading_size }}px;
      line-height: {{ section.settings.heading_line_height }}px;
    }
    .section-{{ section.id }} .section-sub-heading {
      font-size: {{ section.settings.sub_heading_size }}px;
      letter-spacing: {{ section.settings.subheading_letter_spacing }}px;
      line-height: {{ section.settings.sub_heading_line_height }}px;
    }
  {%- endunless -%}
  {%- if section.settings.section_heading_color != blank -%}
    .section-{{ section.id }} .section-heading {
      color: {{ section.settings.section_heading_color }};
    }
  {%- endif -%}
  {%- if section.settings.section_sub_heading_color != blank -%}
    .section-{{ section.id }} .section-sub-heading {
      color: {{ section.settings.section_sub_heading_color }};
    }
  {%- endif -%}
  {%- if section.settings.section_description_color != blank -%}
    .section-{{ section.id }} .section-description {
      color: {{ section.settings.section_description_color }};
    }
  {%- endif -%}
  .section-{{ section.id }} .content-text {
    padding: {{ section.settings.box_inside_padding }}%;
  }
  @media (max-width: 1199px) {
    .section-{{ section.id }} .content-text {
      padding: 60px 30px;
    }
    .section-{{ section.id }}.shop-banner-style-3 .section-heading {
      font-size: var(--font_size_plus47) !important;
      line-height: var(--font_size_plus72) !important;
    }
  }
  @media (max-width: 575px) {
    .section-{{ section.id }} .content-text {
      padding: 40px 15px;
    }
    .section-{{ section.id }}.shop-banner-style-3 .section-heading {
      font-size: var(--font_size_plus43) !important;
    }
  }
</style>
