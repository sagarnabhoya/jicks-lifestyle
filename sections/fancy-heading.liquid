    {
      "type": "range",
      "id": "fancy_text_lh_size",
      "min": 30,
      "max": 350,
      "step": 5,
      "unit": "px",
      "label": "Fancy text line height",
      "default": 160
    },
    {
      "type": "range",
      "id": "text_letter_spacing",
      "min": -10,
      "max": 10,
      "step": 0.5,
      "unit": "px",
      "label": "Fancy text letter spacing",
      "default": -7
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "default": "500",
      "options": [
        {
          "value": "100",
          "label": "100"
        },
        {
          "value": "200",
          "label": "200"
        },
        {
          "value": "300",
          "label": "300"
        },
        {
          "value": "400",
          "label": "400"
        },
        {
          "value": "500",
          "label": "500"
        },
        {
          "value": "600",
          "label": "600"
        },
        {
          "value": "700",
          "label": "700"
        },
        {
          "value": "800",
          "label": "800"
        },
        {
          "value": "900",
          "label": "900"
        }
      ]
    },
    {
      "type": "range",
      "id": "fancy_text_bd_size",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Fancy text bottom down",
      "default": 45
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "checkbox",
      "id": "section_show",
      "label": "Show section in mobile",
      "default": false
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section background color"
    },
    {
      "type": "color_background",
      "id": "section_gradient",
      "label": "Gradient background"
    },
    {
      "type": "color",
      "id": "fancy_text_color",
      "label": "Fancy text color"
    },
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID"
    },
    {
      "type": "text",
      "id": "section_class_name",
      "label": "Section class name"
    }
  ],
  "presets": [
    {
      "name": "Fancy heading"
    }
  ]
}
{% endschema %}
