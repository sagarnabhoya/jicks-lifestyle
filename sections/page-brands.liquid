	    {
	      "type": "color",
	      "id": "section_bg_color",
	      "label": "Section background color"
	    },
	    {
	      "type": "color_background",
	      "id": "section_gradient",
	      "label": "Gradient background"
	    },
	    {
	      "type": "text",
	      "id": "section_id",
	      "label": "Section ID"
	    },
	    {
	      "type": "text",
	      "id": "section_class_name",
	      "label": "Section class name"
	    }
    ]
  }
