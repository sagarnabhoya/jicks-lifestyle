    "name": "Brands page",
    "settings": [
    	{
	      "type": "select",
	      "id": "container_type",
	      "label": "Container type",
	      "default": "container",
	      "options": [
	        {
	          "value": "container-fluid",
	          "label": "Container fluid"
	        },
	        {
	          "value": "w-100 overflow-hidden",
	          "label": "Full width"
	        },
	        {
	          "value": "container",
