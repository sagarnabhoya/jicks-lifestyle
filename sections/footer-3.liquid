      "label": "Logo url"
    },
    {
      "type": "select",
      "id": "copyright_content_alignment",
      "label": "Copyright content alignment",
      "default": "center",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "Right"
        }
      ]
    },
    {
      "type": "richtext",
      "id": "copyright_text",
      "label": "Copyright content",
      "default": "<p>Â© Copyright 2022</p>"
