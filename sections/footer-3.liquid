{{ 'footer.min.css' | asset_url | stylesheet_tag }}
{{ 'footer-style-3.min.css' | asset_url | stylesheet_tag }}
<footer class="style-3">
  <div class="section-bg footer-cover-image d-none d-lg-block" style="{% if section.settings.footer_bg_image != blank %}background-image: url({{ section.settings.footer_bg_image | image_url }});{% elsif section.settings.footer_gradient != blank %}--section_bg:{{ section.settings.footer_gradient }};{% else %} background-color: #9b6501;{% endif %}"></div>
	{%- if section.blocks.size != 0 -%}
		<div class="w-100 overflow-hidden">
			<div class="row">
				<div class="col-12 fancy-text-main">
					<div class="swiper" data-slider-options='{ "slidesPerView": "auto", "spaceBetween":50, "centeredSlides": true, "speed": 10000, "loop": true, "allowTouchMove": false, "autoplay": { "delay":1, "disableOnInteraction": false }, "keyboard": { "enabled": true, "onlyInViewport": true }, "breakpoints": { "1200": { "slidesPerView": 4 }, "992": { "slidesPerView": 3 }, "768": { "slidesPerView": 2 } }, "effect": "slide" }'>
            <div class="swiper-wrapper swiper-width-auto">
            	{%- for i in (1..3) -%}
	              <div class="swiper-slide">
	                <div class="fancy-text">{{ section.settings.marquee_text }}</div>
	              </div>
              {%- endfor -%}
            </div>
          </div>
				</div>
			</div>
		</div>
		<div class="main-footer-wrapper position-relative">
			<div class="{{ section.settings.container_type }}">
				<div class="site-footer {{ section.settings.section_class_name }}" style="{% if section.settings.footer_bg_color != blank %}background-color: {{ section.settings.footer_bg_color }};{% endif %}"> 
					<div class="footer-top {% unless section.settings.middle_show_border_bottom %}border-bottom-0{% endunless %}">
          {%- liquid
  					assign wrapper_class = ''
  	        if section.settings.container_type == 'w-100 overflow-hidden'
  	          if section.settings.show_content_container == true
  	            assign wrapper_class = 'container'
  	          else
  	            assign wrapper_class = 'container-fluid'
  	          endif
  	        elsif section.settings.container_type == 'container-fluid' and section.settings.show_content_container == true
  	          assign wrapper_class = 'container'
  	        endif
          -%}
	        {%- if wrapper_class != '' -%}
	          <div class="{{ wrapper_class }}">
	        {%- endif -%}
						<div class="row">
						{%- for block in section.blocks -%}
              {%- capture blocktitle -%}
                {%- if block.settings.heading != blank -%}<div class="block-heading{% if block.type == 'menu' %} mobile-toggle{% endif %}">{{ block.settings.heading }}</div>{%- endif -%}
              {%- endcapture -%}
              {%- capture column-width -%}{{ block.settings.column_width }}{%- endcapture -%}
              {%- case block.type -%}
                {%- when 'logowithtext' -%}
                  <div class="col-lg-{{ column-width }} text-block-content footer-block text-center text-lg-start">
                    <a class="d-inline-block footer-logo" href="{{ shop.url }}" aria-label="logo">
                      {%- if block.settings.logo != blank -%}
                        <img src="{{ block.settings.logo | image_url }}" alt="" width="{{ block.settings.logo.width }}" height="{{ block.settings.logo.height }}" loading="lazy" style="max-width: {{ block.settings.logo_image_width }}px" />
                      {%- else -%}
                        {{ shop.name }}
                      {%- endif -%}
                    </a>
                    {%- if block.settings.content_text != blank -%}
                      <div class="logo-content">{{ block.settings.content_text }}</div>
                    {%- endif -%}
                    {%- if block.settings.phone != blank -%}
                      <div class="hongo-phone-info">
                        <label>{{ 'sections.footer-3.phone' | t }}</label> <a href="tel:{{ block.settings.phone }}" aria-label="phone">{{ block.settings.phone }}</a>
                      </div>
                    {%- endif -%} 
                    {%- if block.settings.email != blank -%}
                      <div class="footer-email-info">
                        <label>{{ 'sections.footer-3.email' | t }}</label> <a href="mailto:{{ block.settings.email }}" aria-label="email">{{ block.settings.email }}</a>
                      </div>
                    {%- endif -%}
                    {%- if block.settings.show_social_icon == true -%}
                      <div class="social-icon d-flex align-items-center justify-content-center justify-content-lg-start {{ block.settings.social_style }}">
                        <span class="text-small alt-font">{{ block.settings.social_title }}</span>{%- render 'social-follow', style_class: block.settings.social_type, social_mode: block.settings.social_style -%}  
                      </div>
                    {%- endif -%}                                          
                  </div>
                {%- when 'menu' -%}
                  <div class="col-md-6 col-lg-3 col-xl-{{ column-width }} offset-xl-1 footer-block mobile-wrapper">
                    {{ blocktitle }}
                    <ul class="footer-menu-link">
                      {%- for link in linklists[block.settings.selected_menu].links -%}
                        <li class="menu-item">
                          <a class="navigation-links" href="{{ link.url }}" target="_self" aria-label="menu">
                            {{ link.title }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>
                {%- when 'instagram' -%}
                  <div class="col-md-6 col-lg-{{ column-width }} footer-block instagram">
                    {{ 'instagram.min.css' | asset_url | stylesheet_tag }}
                        {%- if settings.access_token != blank -%}
                          <instagram-feed>
                            {%- if blocktitle != blank and block.settings.category_menu != blank -%}
                              <div class="sidebar-block-title alt-font">{{ blocktitle }}</div>
                            {%- endif -%}
                            <div
                              class="row row-cols-3"
                              id="instagram-feed-{{ section.id }}"
                              data-section-id="{{ section.id }}"
                              data-count="{{ block.settings.count | default: 6 }}"
                              data-instagram-feed
                              data-element-remove=".blog-sidebar-item.instagram"
                            ></div>
                            <script id="instagram-token-{{ section.id }}" type="application/json">
                              {{ settings.access_token | json }}
                            </script>
                          </instagram-feed>
                        {%- else -%}
                          <div class="row row-cols-3">
                            {%- for i in (1..block.settings.count) -%}
                              <div class="col insta-items">
                                <div class="position-relative">
                                  {{ 'image' | placeholder_svg_tag: 'svg-placeholder position-static' }}
                                  <span class="insta-hover"><i class="bi bi-instagram"></i></span>
                                </div>
                              </div>
                            {%- endfor -%}
                          </div>
                        {%- endif -%}
                        {%- if block.settings.label_text != blank -%}
                          <a href="{{ block.settings.insta_btn_link | default: '#' }}" target="_blank" class="insta-btn alt-font" aria-label="btn"><i class="bi bi-instagram"></i>{{- block.settings.label_text -}}</a>
                        {%- endif -%}
                    </div>
                {%- when 'information' -%}  
                  <div class="col-lg-{{ column-width }} footer-block informaiton">
                    {%- if block.settings.heading != blank -%}
                      <h4>{{ block.settings.heading }}</h4>
                    {%- endif -%} 
                    {%- if block.settings.content_text != blank -%} 
                      {%- if block.settings.content_text != blank -%}<div class="custom-content">{{ block.settings.content_text }}</div>{%- endif -%}
                    {%- endif -%} 
                    {%- render 'button-settings',
                      btn_style: block.settings.button_style,
                      btn_size: block.settings.button_size,
                      btn_text: block.settings.btn_text,
                      btn_link: block.settings.btn_link,
                      btn_radius: block.settings.btn_radius,
                      btn_border_width: block.settings.btn_border_width,
                      btn_icon_class: block.settings.btn_icon_class,
                      icon_position: block.settings.icon_position
                    -%}
                  </div>
                {%- when 'newsletter' -%}
                  <div class="col-lg-6 col-xl-{{ column-width }} footer-newsletter {% if block.settings.border_left == true %} border-left {% endif %}">
                    {%- if block.settings.newsletter_heading != blank -%}
                      <h5 class="alt-font">{{ block.settings.newsletter_heading }}</h5>
                    {%- endif -%}
                    {%- if block.settings.newsletter_sub_heading != blank -%}
                      <p>{{ block.settings.newsletter_sub_heading }}</p>
                    {%- endif -%}
                    {%- assign formId = 'newsletter-form-' | append: section.id -%}
                    {%- form 'customer', class: 'newsletter-form', id: formId -%}
                      <div class="field d-flex align-items-center position-relative">
                        <input type="hidden" name="contact[tags]" value="newsletter">
                        <input 
                          id="{{ formId }}-email" 
                          type="email" 
                          name="contact[email]" 
                          class="mb-0 {% if form.errors %}error{% endif %} newslatter-input"
                          value="{{ form.email }}" 
                          aria-required="true"
                          autocorrect="off" 
                          autocapitalize="off" 
                          placeholder="{{ 'sections.footer-3.placeholder_email' | t }}"
                          autocomplete="email" 
                          required
                          {%- if form.errors -%} 
                            autofocus
                            aria-invalid="true"
                            aria-describedby="{{ formId }}-error"
                          {% elsif form.posted_successfully? %}
                            aria-describedby="{{ formId }}-success"
                          {% endif %}             
                        />
                        <button type="submit" class="btn alt-font" name="commit" aria-label="submit" {% if block.settings.show_terms_agreement_contact == true %} disabled="disabled" data-terms-action="newsletter_select" {% endif %}><i class="{{ block.settings.btn_icon_class }}"></i>{{- section.settings.btn_text -}}</button>
                      </div>                      
                    {%- endform -%}
                    {%- if block.settings.show_terms_agreement_contact == true -%}
                      <div class="form-agreement d-flex">
                          <input type="checkbox" id="{{ block.id }}-terms_agreement_contact" name="terms_agreement" value="yes" form="newsletter_select" required autocomplete="off" data-terms-trigger="newsletter_select" />
                          <label for="{{ block.id }}-terms_agreement_contact">{{ settings.terms_conditions_label | default: 'I agree with the Terms & Conditions,privacy policy' }} </label>
                      </div>
                    {%- endif -%}
                    {%- if block.settings.payment != blank -%}
                      <div class="payment-icon">
                        <img  class="lazyload" src="{{ block.settings.payment | image_url }}" alt="" width="auto" height="auto" loading="lazy">
                      </div>
                    {%- endif -%}
                  </div> 
                {%- when 'contactdetails' -%}
                  <div class="col-lg-{{ column-width }} footer-block">
                    <div class="hongo-contact-info-wrap">
                      {{ blocktitle }}                      
                      {%- if block.settings.fax != blank -%}
                        <div class="hongo-fax-info">
                          <a href="fax:{{ block.settings.fax }}" aria-label="fax">{{ block.settings.fax }}</a>
                        </div>
                      {%- endif -%}
                      {%- if block.settings.phone != blank -%}
                        <div class="hongo-phone-info">
                          <a href="tel:{{ block.settings.phone }}" aria-label="tel">{{ block.settings.phone }}</a>
                        </div>
                      {%- endif -%}
                      {%- if block.settings.email != blank -%}
                      <div class="footer-email-info">
                        <a href="mailto:{{ block.settings.email }}" aria-label="mailto">{{ block.settings.email }}</a>
                      </div>
                      {%- endif -%}
                      {%- if block.settings.address != blank -%}
                      <div class="footer-address">
                        <p>{{ block.settings.address }}</p>
                      </div>
                      {%- endif -%}
                      {%- if block.settings.show_social_icons -%}
                        {%- render 'social-follow', show_type: 'label' -%}
                      {%- endif -%}
                    </div>
                  </div>
                {%- when 'storelocation' -%}
                  <div class="col-lg-{{ column-width }} footer-block">
                    {{ blocktitle }}
                    <div class="store-location-map cover-background" style="background-image: url(https:{{ block.settings.map_img | image_url }})">
                      <a href="{{ block.settings.map_url }}" target="_blank" rel="noopener noreferrer" aria-label="map">&nbsp;</a>
                    </div>
                  </div>
                {%- when 'content' -%}
                  <div class="col-lg-{{ column-width }} footer-block">
                    {{ blocktitle }}
                    {%- if block.settings.content_text != blank -%}<div class="custom-content">{{ block.settings.content_text }}</div>{%- endif -%}
                  </div>
              {%- endcase -%}
            {%- endfor -%}
					</div>
					{%- if wrapper_class != '' -%}
	          </div>
	        {%- endif -%}
					</div>
					{%- if section.settings.show_footer_bottom == true -%}
		        <div class="footer-bottom">
		          {%- if wrapper_class != '' -%}
		            <div class="{{ wrapper_class }}">
		          {%- endif -%}
		            <div class="row align-items-center justify-content-between copyright">
		              {%- if section.settings.show_block1 == true -%}
                    {%- liquid
  		                if section.settings.social_content_alignment == 'start'
  		                  assign social_order_number =  1
  		                elsif section.settings.social_content_alignment == 'center'
  		                  assign social_order_number =  2
  		                else
  		                  assign social_order_number =  3 
  		                endif
                    -%}
		                  <div class="col-md-6 col-lg text-center text-md-{{ section.settings.social_content_alignment }} order-{{ social_order_number }}"> 
		                    {%- if section.settings.block1_type == 'show_social_media' -%}
		                      <div class="social-media">
		                        {%- render 'social-follow', show_type: 'label', style_class: section.settings.social_type, social_mode: section.settings.social_style -%} 
		                      </div>
		                    {%- elsif section.settings.block1_type == 'show_html_content' -%}
		                      <div class="social-html-content">
		                        {{ section.settings.social_html_content }}
		                      </div>
		                    {%- else -%}  
		                        <div class="social-media">
		                          {%- render 'social-follow', show_type: 'label', style_class: section.settings.social_type, social_mode: section.settings.social_style -%} 
		                        </div>
		                        <div class="social-html-content">
		                          {{ section.settings.social_html_content }}
		                        </div>
		                    {%- endif -%}  
		                  </div>
		              {%- endif -%}
		              {%- if section.settings.show_block2 == true -%}
                    {%- liquid
  		                if section.settings.copyright_content_alignment == 'start'
  		                  assign copyright_order_number =  1
  		                elsif section.settings.copyright_content_alignment == 'center'
  		                  assign copyright_order_number =  2
  		                else -
  		                  assign copyright_order_number =  3 
  		                endif
                    -%}
		                <div class="col-lg d-flex flex-column flex-md-row justify-content-center justify-content-lg-{{ section.settings.copyright_content_alignment }} align-items-center order-{{ copyright_order_number }}">
		                  {%- if section.settings.block2_type == 'show_logo' -%}
		                    <div class="copy-right-logo">
		                      <a href="{{ section.settings.copy_logo_url | default: "#" }}" aria-label="logo">
                            {%- if section.settings.copy_right_logo != blank -%}
	                           <img src="{{ section.settings.copy_right_logo | image_url }}" alt="" width="auto" height="auto" loading="lazy" style="max-width: {{ section.settings.copy_right_logo_width }}px">
                           {%- else -%}
                             {{ 'image' | placeholder_svg_tag: 'svg-placeholder position-static' }}
                           {%- endif -%}                            
		                      </a>
		                    </div>
		                  {%- elsif section.settings.block2_type == 'show_copyright_content' -%}
		                    <div class="copyright-text">{{ section.settings.copyright_text }}</div>
		                  {%- else -%} 
		                    <div class="copy-right-logo{% if section.settings.copy_right_logo != blank %}{% endif %}">
		                      <a href="{{ section.settings.copy_logo_url | default: "#" }}" aria-label="logo">
                            {%- if section.settings.copy_right_logo != blank -%}
	                           <img src="{{ section.settings.copy_right_logo | image_url }}" alt="" width="auto" height="auto" loading="lazy" style="max-width: {{ section.settings.copy_right_logo_width }}px">  
                            {%- else -%}
                             {{ 'image' | placeholder_svg_tag: 'svg-placeholder position-static' }}
                            {%- endif -%}                           
		                      </a>
		                    </div>
		                    <div class="copyright-text">{{ section.settings.copyright_text }}</div>
		                  {%- endif -%}
		                </div>
		              {%- endif -%}            
		              {%- if section.settings.show_block3 == true -%}
                    {%- liquid
  		                if section.settings.content_position == 'start'
  		                  assign payment_order_number =  1
  		                elsif section.settings.content_position == 'center'
  		                  assign payment_order_number =  2
  		                else
  		                  assign payment_order_number =  3 
  		                endif
                    -%}
		                <div class="col-lg text-center text-md-{{ section.settings.content_position }} order-{{ payment_order_number }}">
		                  {%- if section.settings.block3_type == 'show_payment_icon' -%}
		                  {%- if section.settings.payment_icons_image != blank -%}
		                    <img src="{{ section.settings.payment_icons_image | image_url }}" alt="" width="auto" height="auto" loading="lazy" />  
		                  {%- else -%}
                        {{ 'image' | placeholder_svg_tag: 'svg-placeholder position-static copyright-placeholder-img' }}
                      {%- endif -%}
		                  {%- elsif section.settings.block3_type == 'show_html_content' -%}
		                    <div class="payment-content">
		                      {{ section.settings.payment_html_content }}
		                    </div>
		                  {%- else -%} 
		                    {%- if section.settings.payment_icons_image != blank -%}
		                      <img src="{{ section.settings.payment_icons_image | image_url }}" alt="" width="auto" height="auto" loading="lazy" />  
		                    {%- else -%}
                          {{ 'image' | placeholder_svg_tag: 'svg-placeholder position-static copyright-placeholder-img' }}
                        {%- endif -%}
		                    {%- if section.settings.payment_html_content -%}
		                      <div class="payment-content">
		                        {{ section.settings.payment_html_content }}
		                      </div>  
		                    {%- endif -%}
		                  {%- endif -%}
		                </div>
		              {%- endif -%}
		            </div>
		          {%- if wrapper_class != '' -%}
		            </div>
		          {%- endif -%}
		        </div>     
		      {%- endif -%}
				</div>
			</div>
		</div>
	{%- endif -%}
</footer>
<style>  
  {%- assign footer_text_alpha = section.settings.footer_text_color | color_extract: 'alpha' -%}
  {%- if section.settings.footer_text_color != blank and footer_text_alpha > 0 -%}
    footer, footer a, footer p, footer .footer-email-info a, .copyright-text a, .hongo-social-links li a {
      color: {{ section.settings.footer_text_color }};
    }
    .copyright-text a {
      border-color: {{ section.settings.footer_text_color }};
    }
  {%- endif -%}
  {%- if section.settings.footer_link_hover_color != blank -%}
    footer a:hover, footer .footer-email-info a:hover, .copyright-text a:hover, .hongo-social-links li a:hover {
      color: {{ section.settings.footer_link_hover_color }};
    }
  {%- endif -%}
  {%- if section.settings.footer_heading_color != blank -%}
    .block-heading, .footer-newsletter h5, .informaiton h4, a.footer-logo  {
      color: {{ section.settings.footer_heading_color }}; 
    }
  {%- endif -%}
  {%- if section.settings.footer_border_color != blank -%}
    .footer-top {
      border-color: {{ section.settings.footer_border_color }};
    }
  {%- endif -%}  
</style>
