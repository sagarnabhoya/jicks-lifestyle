        }
      ]
    },
    {
      "type": "html",
      "id": "social_html_content",
      "label": "HTML Content"
    },
    {
      "type": "paragraph",
      "content": "===== Block 2 ====="
    },
    {
      "type": "checkbox",
      "id": "show_block2",
      "label": "Show block",
      "default": true
    },
    {
      "type": "select",
      "id": "block2_type",
      "label": "Content type",
      "default": "show_copyright_content",
      "options": [
        {
          "value": "show_logo",
          "label": "Show logo"
        },
        {
          "value": "show_copyright_content",
          "label": "Show copyright content"
        },
        {
          "value": "show_both",
          "label": "Show both"
        }
