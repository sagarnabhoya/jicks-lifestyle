<section id="{{ section.settings.section_id }}" class="section-bg hero-banner cover-background overflow-hidden section-{{ section.id }}{{ section.settings.section_class_name }} d-md-block {%- if section.settings.section_bg_image != blank -%}{{ section.settings.background_position }}{% endif %}" style="{% if section.settings.section_bg_image != blank %}background-image: url({{ section.settings.section_bg_image | image_url }});{% elsif section.settings.section_gradient != blank %}--section_bg:{{ section.settings.section_gradient }};{% else section.settings.section_bg_color != blank %}--section_bg: {{ section.settings.section_bg_color }};{% endif %}">
  <div class="{{ section.settings.container_type }}">
    <div class="row align-items-center{% if section.settings.right_image %} flex-row-reverse{% endif %}">
      {%- if section.settings.hide_image_block == true -%}
        <div class="col-lg-{{ section.settings.column_width }} {% if section.settings.right_image %}show-right-image{% else %}show-left-image{% endif %} image-wrap position-relative">
          <div>
            {%- render 'responsive-image', image: section.settings.image, placeholder_type: 'simple-image' -%}
          </div>
        </div>
      {%- endif -%}
      {%- if section.settings.hide_content_block == true -%}
        <div class="col-lg-{{ section.settings.column_width1 }} content-wrap text-center text-lg-start">
          {%- assign rating_vaule = section.settings.rating -%}
            {%- assign rating_number = rating_vaule | times: 20 -%}
            {%- if rating_vaule != blank -%}
              <div class="rating-wrapper d-flex justify-content-center justify-content-lg-start">
                <div class="rating-inner alt-font align-items-center d-flex">
                  {%- assign rating_value_string = rating_vaule | append: '' -%}
                  <span class="total-rating d-flex align-items-center">
                    <span class="simple-rating position-relative d-flex">
                      <i class="bi bi-star-fill"></i>
                    </span>
                    {{ rating_vaule }}{%- unless rating_value_string contains '.' -%}.0{%- endunless -%}
                  </span> 
                   {%- if section.settings.rating_text != blank -%}
                    {{ section.settings.rating_text }}
                    {%- endif -%}
                </div>
              </div> 
            {%- endif -%}
            {%- if section.settings.block_sub_heading != blank -%}
              <span class="section-sub-heading">{{ section.settings.block_sub_heading }}</span>
            {%- endif -%}
            {%- if section.settings.block_heading != blank -%}
              <h3 class="section-heading alt-font">{{ section.settings.block_heading }}</h3>
            {%- endif -%}
            {%- if section.settings.block_description != blank -%}
              <div class="section-description">{{ section.settings.block_description }}</div>
            {%- endif -%}
            <div class="button-wrapper d-flex align-items-center flex-column flex-lg-row">
              {%- render 'button-settings',
                btn_style: section.settings.button_style,
                btn_size: section.settings.button_size,
                btn_text: section.settings.btn_text,
                btn_link: section.settings.btn_link,
                btn_radius: section.settings.btn_radius,
                btn_border_width: section.settings.btn_border_width,
                btn_icon_class: section.settings.btn_icon_class,
                icon_position: section.settings.icon_position
              -%}
              {%- if section.settings.link_text != blank -%}
                <a class="alt-font simple-link" href="{{ section.settings.link_url | default: "#" }}" aria-label="link">{{ section.settings.link_text }}</a>
              {%- endif -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>
<style type="text/css">
  {%- unless section.settings.use_default_section_typography == true -%}
    .section-{{ section.id }} .section-heading {
      font-size: {{ section.settings.title_fontsize }}px;
      line-height: {{ section.settings.title_lineheight }}px;
    }
    .section-{{ section.id }} .section-sub-heading {
      font-size: {{ section.settings.sub_heading_size }}px;
      letter-spacing: {{ section.settings.subheading_letter_spacing }}px;
      line-height: {{ section.settings.sub_heading_line_height }}px;
    }
  {%- endunless -%}
</style>
