{%- liquid
  assign banner_image = section.settings.banner_image
  if template contains 'collection'
    if collection.handle == 'all'
      assign page_title = 'sections.all_products.title' | t
      assign description = 'sections.all_products.description' | t
    elsif template == 'list-collections'
      assign page_title = 'sections.collection_list.title' | t
      assign description = 'sections.collection_list.description' | t
    else
      assign page_title = collection.title
      assign banner_image = collection.metafields.custom.collection_banner
      assign description = collection.description
    endif  
  else
    assign page_title = page.title
    assign description = page.metafields.custom.description
  endif
  render 'page-title', page_title: page_title, banner_image: banner_image, description: description
-%}
